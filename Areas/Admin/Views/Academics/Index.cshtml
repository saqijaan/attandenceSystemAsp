@model IEnumerable<AttendanceSystem.Models.Academic>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.borad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total_marks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.obtain_marks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.passing_year)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.borad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_marks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.obtain_marks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.passing_year)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                @Html.ActionLink("Details", "Details", new { id=item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
